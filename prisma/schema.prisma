generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id               String   @id
  email            String   @unique
  username         String?  @unique
  imageUrl         String
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  isPrivateLibrary Boolean  @default(false)
  library          Game[]
}

model Game {
  id          Int      @unique
  name        String
  totalRating Int
  coverUrl    String
  releaseDate DateTime
  category    Int
  themes      String //? [23, 64] => "23,64" Since MySql doesn't support arrays
  genres      String
  gameModes   String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  status     GameStatus @default(WANT_TO_PLAY)
  userRating Int?
  playTime   Int?       @default(0)
  finishedAt DateTime?
  notes      String?

  userId String
  User   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([userId, id])
  @@index([userId])
}

enum GameStatus {
  WANT_TO_PLAY
  COMPLETED
  PLAYING
  WANT_TO_REPLAY
  ABANDONED
}
