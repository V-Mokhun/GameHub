generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id               String   @id
  email            String   @unique
  username         String?  @unique
  imageUrl         String
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  isPrivateLibrary Boolean  @default(false)
  library          Game[]
}

model Game {
  name        String
  slug        String     @unique
  totalRating Float
  coverUrl    String
  status      GameStatus @default(NONE)
  userRating  Int?
  playTime    Int?       @default(0)
  finishedAt  DateTime?
  notes       String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  userId      String
  User        User       @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([userId, slug])
  @@index([userId])
}

enum GameStatus {
  NONE
  WANT_TO_PLAY
  COMPLETED
  PLAYING
  WANT_TO_REPLAY
  ABANDONED
}
